
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          String     @id @default(uuid())
  name        String     @unique
  phoneNumber String     @unique
  email       String     @unique
  password    String
  packages    Packages[]
  socialId    String     @unique
  updatedAt   DateTime   @updatedAt
  createdAt   DateTime   @default(now())
}

model Packages {
  id                  String   @id @default(uuid())
  packageNumber       String   @unique
  senderName          String
  senderPhoneNumber   String
  receiverName        String
  receiverPhoneNumber String
  quantity            Int
  weight              Float
  volume              Float
  cost                Int
  status              String
  user                Users?     @relation(fields: [userId], references: [id])
  userId              String?
  destination         String
  updatedAt           DateTime @updatedAt
  createdAt           DateTime @default(now())
  arrivedAt           DateTime?
  receivedAt          DateTime?
}
